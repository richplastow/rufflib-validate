{
    "name": "rufflib-validate",
    "version": "1.3.0",
    "description": "A RuffLIB library for succinctly validating JavaScript values.",
    "main": "docs/dist/rufflib-validate.es.js",
    "type": "module",
    "scripts": {
        "build": "rollup -c",
        "test:docs": "node docs/run-nodejs-tests.js # test docs/ using NodeJS",
        "test:src": "node src/run-nodejs-tests.js # test src/ using NodeJS",
        "test": "[ -z $npm_config_src ]&&D=docs||D=src;npm run test:$D"
    },
    "keywords": [
        "RuffLIB",
        "vanilla",
        "javascript",
        "validate",
        "data-validation",
        "schema-validation"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/richplastow/rufflib-validate.git"
    },
    "author": "rich@richplastow.com",
    "license": "MIT",
    "homepage": "https://richplastow.com/rufflib-validate",
    "devDependencies": {
        "@babel/preset-env": "^7.18.6",
        "@rollup/plugin-babel": "^5.3.1",
        "rollup-plugin-copy": "^2.0.1",
        "rollup-plugin-terser": "^7.0.2",
        "rufflib-expect": "^2.0.1"
    }
}
